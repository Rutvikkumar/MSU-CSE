{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "public/*":["./public"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/clubs/page.tsx", "src/app/syllabus/[course].jsx", "src/app/news/page.jsx", "src/components/MessageCards.jsx", "src/components/DropdownMenu.jsx", "src/components/CourseCard.jsx", "src/app/facilities/page.tsx", "src/app/about/cse-in-news/page.jsx"],
  "exclude": ["node_modules"]
}
